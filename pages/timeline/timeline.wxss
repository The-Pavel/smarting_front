/* pages/timeline/timeline.wxss */
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.timeline {
  display: flex;
  justify-content: center !important;
  align-items: center !important;
}


/* view {
  text-align: center;
} */
.button_box {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.card-category {
  background-size: cover;
  background-position: center;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  width: 90vw;
  padding: 20rpx;
  font-size: 42rpx;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  border-radius: 5rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  margin: 40rpx 1% 0 1%;
  position: relative;
}

.comment_count {
  font-size: 24rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.comment_section {
  position: absolute;
  bottom: 0;
  font-size: 24rpx;
  text-align: left;
  color: gray;
  z-index: 1000000000;
  background-color: white;
  margin-bottom: -98rpx !important;
  width: 97% !important;
  padding-left: 3%;
  left: 0;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  border-radius: 0 0 5rpx 5rpx;
}

.created_card {
  background-size: cover;
  background-position: center;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  width: 90vw;
  padding: 20rpx;
  font-size: 42rpx;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  border-radius: 5rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  margin-top: 30rpx;
  margin-left: 3.5%;
  border: 5rpx solid lightblue;
}

.search_place {
  font-style: italic;
  text-align: center;
}

.image_search {
  margin-top: 30rpx;
}

input {
  text-align: center;
}