.button_box {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.put-in-front {
  color: azure;
  text-shadow: 1px 1px 1px black;
}

.card-category {
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
  background-color: black;
  height: 340rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  width: 94vw;
  padding: 40rpx;
  font-size: 42rpx;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  border-radius: 8rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  margin: 30rpx 1% 0 1%;
  position: relative;
  text-align: center;
}

.comment_count {
  font-size: 24rpx;
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  height: 40rpx;
}

.created_card {
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
  background-color: black;
  height: 340rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  width: 94vw;
  padding: 40rpx;
  font-size: 42rpx;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  border-radius: 5rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 3.5%;
  border: 5rpx solid lightblue;
  text-align: center;
}

.selected_image {
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
  background-color: black;
  height: 340rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  width: 94vw;
  padding: 20rpx;
  font-size: 42rpx;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  border-radius: 5rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 3.5%;
  border: 10rpx solid #d2f1f0;
}

.search_place {
  font-style: italic;
  overflow: visible;
  transform: translateY(6rpx);
  font-size: 30rpx;
  text-align: center !important;
}

textarea {
  text-align: center !important;
  font-size: 40rpx !important;
  display: flex;
  flex-direction: column;
  justify-content: space-around !important;
  height: 340rpx !important;
}

input {
  text-align: center !important;
  font-size: 40rpx !important;
}

